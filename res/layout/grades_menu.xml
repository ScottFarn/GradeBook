<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget48"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/background">
	>
	<FrameLayout android:id="@+id/frame" android:layout_width="fill_parent"
		android:layout_height="50px" android:background="#ff000000"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
		<TextView android:id="@+id/widget32" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Assignment Types:"
			android:textSize="28sp" android:textStyle="bold" android:gravity="center">
		</TextView>
	</FrameLayout>
	<ScrollView android:id="@+id/widget43" android:layout_width="fill_parent"
		android:layout_height="325px" android:layout_below="@+id/frame"

		android:layout_alignParentLeft="true">
		<LinearLayout android:id="@+id/rlayout"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">
			<Button android:id="@+id/quiz" android:layout_width="fill_parent"
				android:textSize="28sp" android:layout_height="wrap_content"
				android:text="Quizzes 25%" 
				android:layout_alignParentLeft="true">
			</Button>
			<Button android:id="@+id/test" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="28sp"
				android:text="Tests 50%" android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true">
			</Button>
			<Button android:id="@+id/hws" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Hws 25%"
				android:textSize="28sp"
				android:layout_alignParentLeft="true">
			</Button>
		</LinearLayout>
	</ScrollView>
	<Button android:id="@+id/back" android:layout_width="101px"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:text="Back" android:layout_alignParentBottom="true">
	</Button>
	<Button android:id="@+id/edit" android:layout_width="101px"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:text="Edit Weights" android:layout_alignParentBottom="true">
	</Button>
	<Button android:id="@+id/delete" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Delete Class"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" >
	</Button>


</RelativeLayout>
